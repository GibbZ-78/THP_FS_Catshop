<hr>
<!-- PARTIE CARDS x3 -->
<section class="row justify-content-between">

<% 3.times do |x| %>
  <div class="col-md-4">
        <%= render "layouts/partials/section_one_card", my_cat: @items[x] %>
    </div>
<% end %>
</section>

<hr>

