<!-- PARTIE CARDS x6 -->

<section class="row justify-content-between">
<% 6.times do |x| %>
  <div class="col-md-4">
        <%= render "layouts/partials/section_one_card", my_cat: @items[x+3] %>
    </div>
<% end %>
</section>

<!-- BUTTON VIEW MORE -->
<div class="row justify-content-center my-4">
    <div class="col-2 text-center">
        <%= link_to "Voir plus", items_path, class: "btn btn-outline-primary btn-lg" %>
    </div>
</div>
