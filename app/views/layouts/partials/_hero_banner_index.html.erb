<section class="row justify-content-center mb-5">
  <div class="text-center">
    <div class="row" style="z-index:-5;">
    <%= image_tag("banner_index", alt:"Photo de 3 chatons attablés", class:"opacity-50 rounded-bottom") %>
    </div>
    <div class="row" style="z-index:5;position:absolute;top:100px;">
      <h1 class="display-5 fw-bold text-black">KITTEN CAT (nom non-définitif)</h1>
      <div class="col-lg-6 mx-auto">
        <p class="lead mb-4 text-black">Retrouvez des clichés HD des chatons les plus craquants du Web !</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <% if !user_signed_in? # The button below will appear only if current_user is NOT connected %>
          <%= link_to("Créez votre compte",new_user_registration_path,class:"btn btn-primary btn-lg px-4 gap-3") %>
          <% end %>
          <%= link_to("Parcourez notre catalogue",root_path,class:"btn btn-secondary btn-lg px-4") %>
        </div>
      </div>
    </div>
  </div>
</section>