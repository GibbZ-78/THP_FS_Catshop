<div class="card" style="width: 18rem;">
  <%= image_tag(my_cat.image_url,alt: my_cat.title,class: "card-img-top") %>
  <div class="card-body">
    <h5 class="card-title"><%= my_cat.title %></h5>
    <p class="card-text"><%= my_cat.description %></p>
    <%= link_to("View details", item_path, class: "btn btn-primary", id:"btn_cat_view_details") %>
    <%= link_to("Add to cart", item_path, class: "btn btn-warning", id:"btn_cat_add_to_cart") %>
  </div>
</div>

